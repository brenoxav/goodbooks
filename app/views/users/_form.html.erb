<%= form_with model: @user, class: 'form' do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username, minlength: 3, maxlength: 15, required: true %><br><br>
  <%= form.label :full_name %>
  <%= form.text_field :full_name, minlength: 3, maxlength: 50, required: true %><br><br>
  <%= form.label :photo, "Photo URL (preferably square, or it might be distorted)" %>
  <%= form.text_field :photo %><br><br>
  <%= form.label :cover_image, "Cover image URL" %>
  <%= form.text_field :cover_image %><br><br>
  <%= form.submit "Submit", class: 'button' %>
<% end %>
