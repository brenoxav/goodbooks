<div class="page-container">
  <h1>Connect with People</h1>

  <% @users.each do |user| %>
    <div class="who-to-follow-card d-flex connect-wrapper">
      <%= image_tag user.photo, size: '60', class: 'who-to-follow-photo' %>
      <div class="who-to-follow-name-wrap d-flex">
        <%= link_to user.full_name, user_path(user), class: 'who-to-follow-name bold' %>
        <%= link_to "@#{user.username}", user_path(user), class: 'who-to-follow-username' %>
      </div>
      <%= follow_btn(user) %>
    </div>
  <% end %>
</div>
