<% if current_user %>
<div class="nav-panel">

  <div class="nav-panel-user d-flex">
    <%= image_tag 'https://avatars.githubusercontent.com/u/5323054?s=60', size: '40', class: "nav-panel-user-photo" %>
    <%= link_to current_user.full_name, user_path(current_user), class: 'nav-panel-user-name uppercase' %>
  </div>

  <div class="nav-panel-stats d-flex">
    <div class="d-flex">
      <span class="stats-following bold"><%= current_user.followers.count %></span>
      <span class="stats-label">Following</span>
    </div>
    <div class="d-flex">
      <span class="stats-followers bold"><%= current_user.followeds.count %></span>
      <span class="stats-label">Followers</span>
    </div>
  </div>
    
  <div>
    <%= link_to 'Home', users_path, class: 'nav-link uppercase bold' %>
    <%= link_to 'Connect', users_path, class: 'nav-link uppercase bold' %>
    <%= link_to 'Discover', opinions_path, class: 'nav-link uppercase bold' %>
    <%= link_to 'Profile', user_path(current_user), class: 'nav-link uppercase bold' %>
    <%= link_to 'Statistics', user_path(current_user), class: 'nav-link uppercase bold' %>

    <%= button_to 'Log out', logout_path, method: :delete, class: 'nav-link uppercase bold btn-logout' if logged_in? %>
  </div>
  

</div>
<% else %>
<div class="nav-panel">
  <%= link_to 'Log in', login_path, type: 'button', class: 'btn btn-primary text-uppercase' %>
</div>
<% end %>